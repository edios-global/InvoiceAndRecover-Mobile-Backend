    "canvas": "^2.11.2",
    "colors": "^1.4.0",
    "convert-excel-to-json": "^1.7.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "csvtojson": "^2.0.10",
    "dotenv": "^8.6.0",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "express-fileupload": "^1.3.1",
    "google-auth-library": "^9.4.2",
    "intuit-oauth": "^4.0.0",
    "jsbarcode": "^3.11.5",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^5.10.6",
    "mongoose-aggregate-paginate-v2": "^1.0.6",
